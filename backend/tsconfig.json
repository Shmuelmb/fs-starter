{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["api/*"],
      "#db": ["prisma/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src"],
  "exclude": ["node_modules", "dist"]
}
